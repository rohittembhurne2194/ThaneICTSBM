            <div class="col-sm-4">
                @*<label>कर्मचारी निवडा / Select Employee</label>*@
                <label>Select Ward/Prabhag</label>
                <select id="WardNo" class="form-control form-control form-control-sm"></select>
            </div>
            <div class="col-sm-4">
                @*<label>कर्मचारी निवडा / Select Employee</label>*@
                <label>Select Area</label>
