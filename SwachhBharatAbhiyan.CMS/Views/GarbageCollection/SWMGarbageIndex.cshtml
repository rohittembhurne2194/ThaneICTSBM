                </div>
            </div>
            <div class="col-sm-4">
                @*<label>कर्मचारी निवडा / Select Employee</label>*@
                <label>Select Employee</label>
                <select id="selectnumber" class="form-control form-control form-control-sm"></select>
            </div>
            <div class="col-sm-4">
                @*<label>कर्मचारी निवडा / Select Employee</label>*@
                <label>Select Zone</label>
