                    <option value="5">Refuse Derived Fuel</option>
                    <option value="6">Plastics</option>
                    <option value="7">Metal And Glass</option>
                    <option value="8">Cardboards</option>
                    <option value="9">Any Other Veriety</option>
                    <option value="10">Soil</option>
                    <option value="11">Sand</option>
                    <option value="12">Less Than 8mm Aggregates</option>
                    <option value="13">8-16mm Aggregates</option>
                    <option value="14">Greater Than 18mm Aggregates</option>
                    <option value="15">Manufactured Goods(Bricks,Tiles,etc.)</option>
                    <option value="16">Fly Ash</option>
                    <option value="17">Sand and Soil</option>
                    <option value="18">Dried Sludge</option>
                    <option value="19">Treated Wastewater</option>
                    <option value="20">Sanitary Landfill Facility</option>
                    SLF
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2  offset-md-10" style="text-align:right">
                <div class="controls">
                    <input data-background-color="filter-button-box-color" style="margin-top:8px;" class="btn btn-sm btn-success filter-button-style" type="button" value="Filter Records" id="filter" onclick="Search()" />
                </div>
            </div>
        </div>

    </div>
    <div class="container">
        <br />
        <div style="width:100%; margin:0 auto;">
            <label style="display:inline-flex" class="float-right">Search:&nbsp;<input type="text" id="s" class="form-control form-control-sm" onkeyup="Search()"></label>
            <table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
                <thead>
                    @*<tr>
                            <th>ID</th>
                            <th>तारीख / Date</th>
                            <th>कर्मचारी / Employee</th>
                            <th>घर आयडी /  House ID</th>
                            <th>घर मालक / House Owner</th>
                            <th>पत्ता /Collection Address</th>
                            <th>वाहन क्रमांक / Vehicle Number</th>
                            <th>टिप्पणी / Comment </th>
                            <th>पूर्व फोटो / Before Image </th>
                            <th>नंतर फोटो / After Image </th>
                            <th>वर्गीकरणाचे प्रकार / Segregated Type </th>
                            <th>बॅटरीची स्थिती / Battery Status </th>
                        </tr>*@
                    <tr>
                        <th>ID</th>
                        <th> Date</th>
                        <th> Employee</th>
                        <th> Facility Type </th>
                        <th> SWM Nme </th>
                        <th> Collection Address</th>
