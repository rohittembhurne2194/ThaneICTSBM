<body>
    <div class="container" style="padding-top:8px">
        <div class="row">
            <div class="col-sm-2">
                <div class="controls">
                    @*<label>तारखेपासून / From Date</label>*@
                    <label>From Date</label>
                    <input id="txt_fdate" class="datepicker form-control form-control-sm" type="text" />
                </div>
            </div>
            <div class="col-sm-2">
                <div class="controls">
